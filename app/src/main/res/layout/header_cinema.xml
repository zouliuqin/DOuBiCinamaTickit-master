<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    android:orientation="vertical">

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/item_cinema_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_cinema_text"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:padding="3dp"
        android:text="离我最近" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cinema_cinameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="电影院电影院电影院电影院电影院电影院电影院"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_cinema_minPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:text="￥55起"
            android:textColor="@color/color_orange"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_cinema_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="电影院地址电影院地址电影院地址电影院地址"
            android:textColor="@color/gray_500" />

        <TextView
            android:id="@+id/item_cinema_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=">20km"
            android:textColor="@color/gray_400" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"

        android:layout_weight="1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_cinema_vip"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="3dp"

            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_vip" />

        <ImageView
            android:id="@+id/item_cinema_park"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="3dp"

            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_park" />

        <ImageView
            android:id="@+id/item_cinema_imax"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="3dp"

            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_imax" />

        <ImageView
            android:id="@+id/item_cinema_wifi"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:layout_margin="3dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_wifi" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_200" />

</LinearLayout>