<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include_actionbar_buy_ticket"
        layout="@layout/actionbar"></include>
    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />


  <RadioGroup
      android:layout_above="@+id/line1"
      android:orientation="horizontal"

      android:id="@+id/radioGroup_byu_ticket"
      android:layout_width="match_parent"
      android:layout_height="40dp" >
      <RadioButton
          android:layout_gravity="center"
          android:gravity="center"
          android:button="@null"
          android:text="正在热映"
          android:id="@+id/radioButton_lefet"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="60dp" />
      <TextView
          android:background="#000000"
          android:layout_width="0.5dp"
          android:layout_height="match_parent" />
      <RadioButton
          android:gravity="center"
          android:layout_gravity="center"
          android:button="@null"
          android:text="即将上映"
          android:id="@+id/radioButton_right"
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="60dp" />

  </RadioGroup>
    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <android.support.v4.view.ViewPager
        android:layout_weight="1"
        android:id="@+id/framentlayout_BuyTicket_viewpager"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>