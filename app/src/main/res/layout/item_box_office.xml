<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <TextView
        android:id="@+id/tv_movie_ranking"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:gravity="center|left"
        android:text="01"

        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/im_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/im_movie_poster"
            android:text="寻梦环游记"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_movie_us_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_name"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/im_movie_poster"
            android:text="coco"

            android:textSize="14sp" />


    </RelativeLayout>

    <TextView
        android:layout_marginEnd="5dp"
        android:id="@+id/tv_movie_box_office"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2788.3"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginEnd="5dp"
        android:id="@+id/tv_movie_sum_box_office"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="5.18"


        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_movie_grade"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="9.0"


        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>